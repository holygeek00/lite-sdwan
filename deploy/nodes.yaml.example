# SD-WAN 批量部署配置示例
#
# 复制此文件为 nodes.yaml 并修改为实际的服务器信息
# 用法: ./batch_deploy.sh nodes.yaml

# Controller 节点（中心控制器）
controller:
  host: 1.2.3.4              # 公网 IP
  ssh_user: root             # SSH 用户名
  ssh_port: 22               # SSH 端口
  wg_ip: 10.254.0.1          # WireGuard 内网 IP

# Agent 节点列表
agents:
  - host: 5.6.7.8            # 节点 2 公网 IP
    ssh_user: root
    ssh_port: 22
    wg_ip: 10.254.0.2        # 节点 2 WireGuard IP

  - host: 9.10.11.12         # 节点 3 公网 IP
    ssh_user: root
    ssh_port: 22
    wg_ip: 10.254.0.3        # 节点 3 WireGuard IP

  # 可以添加更多节点...
  # - host: 13.14.15.16
  #   ssh_user: root
  #   ssh_port: 22
  #   wg_ip: 10.254.0.4
